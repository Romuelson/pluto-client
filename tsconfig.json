{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		// "outDir": "dist",
		"baseUrl": "./",
		"paths": {
			"@src/": ["./src/"],
			"@styles/*": ["./src/assets/styles/*"],
			"@components/*": ["./src/components/*"],
			"@hocs/*": ["./src/hocs/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@mocks/*": ["./src/mocks/*"],
			"@pages/*": ["./src/pages/*"],
			"@routes/*": ["./src/routes/*"],
			"@services/*": ["./src/services/*"],
			"@store/*": ["./src/store/*"],
			"@types/*": ["./src/types/*"],
			"@utils/*": ["./src/utils/*"],
			"@public/*": ["./public/*"],
			"@images/*": ["./public/assets/images/*"],
			"@icons/*": ["./public/assets/images/common/icons/*"],
		},
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"locale": "en"
	},
	"ts-node": {
        "esm": true,
		"experimentalSpecifierResolution": "node"
    },
	"include": ["./src/assets.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["configs", "dist", "node_modules", "public"]
}
